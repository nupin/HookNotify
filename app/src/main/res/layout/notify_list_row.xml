<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:id="@+id/coordinator_notify_layout_row">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:id="@+id/linearLayout_notify_layout_row"
        android:layout_gravity="center_horizontal"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/sender_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left" />

            <TextView android:id="@+id/sender_name"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:allowUndo="false"
                android:layout_toRightOf="@+id/sender_image"
                android:layout_toEndOf="@+id/sender_image" />

            <TextView
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sent_text"
                android:layout_below="@+id/sender_name"
                android:layout_toRightOf="@+id/sender_image"
                android:layout_toEndOf="@+id/sender_image" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>